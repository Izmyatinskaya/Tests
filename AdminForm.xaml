                                    </StackPanel>
                                </MenuItem.Header>
                                <MenuItem Header="Экспорт" FontFamily="Arial" FontSize="14" BorderBrush="Transparent" BorderThickness="0" Background="#FFF" Click="MenuItem_Click_2" />
                                <MenuItem Header="Импорт" FontFamily="Arial" FontSize="14" BorderBrush="Transparent" BorderThickness="0" Background="#FFF" Click="MenuItem_Click_3" />
                            </MenuItem>
                        </Menu>
                        <Button Content="Просмотр" Click="viewTestClick" FontFamily="Arial" FontSize="14" Padding="10,5,10,5" Background="#FFF" Margin="5,0,5,0" BorderBrush="#DCDCDC" BorderThickness="1"/>
                        <Button Content="Прохождение" Click="startTest_Click" FontFamily="Arial" FontSize="14" Padding="10,5,10,5" Background="#FFF" Margin="5,0,5,0" BorderBrush="#DCDCDC" BorderThickness="1"/>
                        <Button Content="Просмотр связанных таблиц" Click="Button_Click_4" FontFamily="Arial" FontSize="14" Padding="10,5,10,5" Background="#FFF" Margin="5,0,5,0" BorderBrush="#DCDCDC" BorderThickness="1"/>
                    </ToolBar>





                    <ToolBar Name="answersQuestionsToolBar" FontFamily="Arial" Background="#F5F5F5" FontSize="16" BorderBrush="#FFA500" BorderThickness="0,0,0,2" Visibility="Collapsed">
                        <Button FontFamily="Arial" FontSize="14" Padding="10,0,10,0" Background="#FFF" Margin="5,0,5,0" BorderBrush="#DCDCDC" BorderThickness="1" Click="reloadQuestionsAnswers_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/reload-90.png"  Margin="5" Stretch="Fill" Width="20"/>
                            </StackPanel>
                        </Button>
                        <Button Content="Назад" Click="Button_Click_5" HorizontalAlignment="Left" Padding="10,5,10,5" Background="#FFF"  FontSize="14" Margin="5,0,5,0" BorderBrush="#DCDCDC" BorderThickness="1"/>

                        <Menu HorizontalAlignment="Left" BorderBrush="Transparent" BorderThickness="0" Background="#F5F5F5" Padding="5,0,5,0" Margin="5,0,0,0">
                            <MenuItem FontFamily="Arial" FontSize="14" Background="#FFF" Padding="10,5,10,5" Margin="5,0,5,0" BorderBrush="#DCDCDC" BorderThickness="1">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Вопросы" VerticalAlignment="Center"/>
                                        <TextBlock Text=" ▼" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="14" Foreground="#FF404040" />
                                    </StackPanel>
                                </MenuItem.Header>
                                <MenuItem Header="Удалить" Click="deleteQuestion_Click" FontFamily="Arial" FontSize="16" BorderBrush="Transparent" BorderThickness="0" Background="#FFF"/>
                                <MenuItem Header="Добавить" Click="addQuestion_Click" FontFamily="Arial" FontSize="16" BorderBrush="Transparent" BorderThickness="0" Background="#FFF"/>
                                <MenuItem Header="Редактировать" Click="editQuestion_Click" FontFamily="Arial" FontSize="16" BorderBrush="Transparent" BorderThickness="0" Background="#FFF"/>
                            </MenuItem>
                        </Menu>

                        <Menu HorizontalAlignment="Right" BorderBrush="Transparent" BorderThickness="0" Background="#F5F5F5" Padding="5,0,5,0" Margin="5,0,0,0">
                            <MenuItem FontFamily="Arial" FontSize="14" Background="#FFF" Padding="10,5,10,5" Margin="5,0,5,0" BorderBrush="#DCDCDC" BorderThickness="1">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Ответы" VerticalAlignment="Center"/>
                                        <TextBlock Text=" ▼" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="14" Foreground="#FF404040" />
                                    </StackPanel>
                                </MenuItem.Header>
                                <MenuItem Header="Удалить" Click="deleteAnswer_Click" FontFamily="Arial" FontSize="16" BorderBrush="Transparent" BorderThickness="0" Background="#FFF"/>
                                <MenuItem Header="Добавить" Click="addAnswer_Click" FontFamily="Arial" FontSize="16" BorderBrush="Transparent" BorderThickness="0" Background="#FFF"/>
                                <MenuItem Header="Редактировать" Click="editAnswer_Click" FontFamily="Arial" FontSize="16" BorderBrush="Transparent" BorderThickness="0" Background="#FFF"/>
                            </MenuItem>
                        </Menu>
                    </ToolBar>

                    <DataGrid Name="testsDataGrid" MaxHeight="900" ScrollViewer.VerticalScrollBarVisibility="Auto"
          ScrollViewer.HorizontalScrollBarVisibility="Auto" AutoGenerateColumns="False" Margin="10" Style="{StaticResource DefaultDataGridStyle}" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding Id}" />
                            <DataGridTextColumn Header="Наименование" Binding="{Binding Title}" />
                            <DataGridTextColumn Header="Количество вопросов" Binding="{Binding Count}" />
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu Name="testsDataGridContextMenu">
                                <MenuItem Header="Добавить" Click="Button_Click_2"/>
                                <MenuItem Header="Удалить" Click="deleteTestClick"/>
                                <MenuItem Header="Изменить" Click="edtiTestClick"/>
                                <MenuItem Header="Просмотр" Click="viewTestClick"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>

                    </DataGrid>

                    <StackPanel Name="comboStackPanel" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Collapsed" >
                        <ComboBox Name="testsTitleComboBox" HorizontalAlignment="Center" Width="198" SelectionChanged="testsTitleComboBox_SelectionChanged" Margin="0,0,10,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
