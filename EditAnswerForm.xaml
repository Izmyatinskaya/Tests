<Window x:Class="wpf_тесты_для_обучения.EditAnswerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_тесты_для_обучения"
        mc:Ignorable="d"
        Title="EditAnswerForm" Height="450" Width="800"  WindowStartupLocation="CenterScreen">
    <Grid Width="800" Height="565">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Заголовок "Регистрация" -->
        <TextBlock Text="Редактировать ответ"
                   Style="{StaticResource AcentTextStyle}"
                   Grid.Row="0"/>

        <!-- Основная группа элементов -->
        <StackPanel Grid.Row="1" 
    HorizontalAlignment="Center"
    VerticalAlignment="Top"
    Width="400">
            <!-- Группа выбора вопроса -->
            <StackPanel Orientation="Vertical" Margin="0,15,0,0">
                <TextBlock  Text="Выберите вопрос" 
                        FontFamily="Arial" 
                        FontSize="16" 
                        Foreground="Black" />
                <ComboBox Name="questionsComboBox"
            Height="30"
            BorderThickness="1"
            BorderBrush="Red" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FullTitle}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Style="{StaticResource LinkTextStyle}" 
                           Text="Создать новый" 
                           MouseDown="goToAddQuestionsForm_MouseDown" 
                           HorizontalAlignment="Left" 
                           Margin="0,0,0,0"  />
            </StackPanel>
            <!-- Группа ФИО -->
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <TextBlock Text="Введите ответ" 
            FontFamily="Arial" 
            FontSize="16" 
            Foreground="Black" />
                <TextBox Name="answerTextBox"
            Height="30"
            BorderBrush="#FFABADB3"
            BorderThickness="1" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <TextBlock Text="Укажите верный он или нет" 
            FontFamily="Arial" 
            FontSize="16" 
            Foreground="Black" />
                <ComboBox Name="correctComboBox"
                          SelectedValue="{Binding Path=IsCorrect, Mode=TwoWay}"
                          SelectedValuePath="Content"
                          Height="30" 
                          BorderBrush="#FFABADB3" 
                          BorderThickness="1">
                    <ComboBoxItem Content="True"/>
                    <ComboBoxItem Content="False"/>
                </ComboBox>

            </StackPanel>

            <!-- Группа действий -->
            <StackPanel Grid.Row="2" 
    Orientation="Horizontal" 
    HorizontalAlignment="Center" 
    Margin="0,20,0,0">
                <TextBlock Text="Назад" 
        FontFamily="Arial" 
        FontSize="14" 
        Foreground="#FFA25100" 
        TextDecorations="Underline" 
        Cursor="Hand"
        VerticalAlignment="Center" 
        Margin="0,0,10,0" MouseDown="goBack_MouseDown" />
                <Button Content="Редактировать"
                        Style="{StaticResource OrangeButtonStyle}"
                        Width="250" 
                        FontSize="20" 
                        Click="Button_Click" />        

            </StackPanel>
            <StackPanel>
                <TextBlock Name="errorTextBlock"
                           FontFamily="Arial" 
                           FontSize="14"
                           Foreground="Red"
                           Cursor="Hand"
                           VerticalAlignment="Center" 
                           Margin="0,0,5,0" 
                           MouseDown="goToAddQuestionsForm_MouseDown" 
                           HorizontalAlignment="Center"  >
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

