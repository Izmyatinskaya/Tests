<Window x:Class="wpf_тесты_для_обучения.EditQuestionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_тесты_для_обучения"
        mc:Ignorable="d"
        Title="EditQuestionForm" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Width="800" Height="565">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Заголовок "Регистрация" -->
        <TextBlock Text="Редактировать вопрос"
                   Style="{StaticResource AcentTextStyle}"/>

        <!-- Основная группа элементов -->
        <StackPanel Grid.Row="1" 
    HorizontalAlignment="Center"
    VerticalAlignment="Top"
    Width="400">
            <!-- Группа выбора вопроса -->
            <StackPanel Orientation="Vertical" Margin="0,15,0,0">
                <TextBlock  Text="Выберите тест" 
                        FontFamily="Arial" 
                        FontSize="16" 
                        Foreground="Black" />
                <ComboBox Name="testsComboBox"
            Height="30"
            BorderThickness="1"
            BorderBrush="Red" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FullTitle}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <!-- Группа ФИО -->
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <TextBlock Text="Введите вопрос" 
            FontFamily="Arial" 
            FontSize="16" 
            Foreground="Black" />
                <TextBox Name="questionTextBox"
            Height="30"
            BorderBrush="#FFABADB3"
            BorderThickness="1" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <TextBlock Text="Загрузите изображение (необязательно)" 
            FontFamily="Arial" 
            FontSize="16" 
            Foreground="Black" />
                <Image Name="PreviewImage"
           Width="50"
           Height="50"
           Stretch="Uniform"
           Margin="10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Загрузить изображение"
            Click="LoadImage_Click"
            Padding="5"
            FontSize="14" HorizontalAlignment="Left" Margin="0,0,10,0"/>
                    <Button Content="Очистить изображение"
            Click="ClearImage_Click"
            Padding="5"
            FontSize="14"/>
                </StackPanel>

            </StackPanel>

            <!-- Группа действий -->
            <StackPanel Grid.Row="2" 
    Orientation="Horizontal" 
    HorizontalAlignment="Center" 
    Margin="0,20,0,0">
                <TextBlock Text="Назад" 
        FontFamily="Arial" 
        FontSize="14" 
        Foreground="#FFA25100" 
        TextDecorations="Underline" 
        Cursor="Hand"
        VerticalAlignment="Center" 
        Margin="0,0,10,0" MouseDown="goBack_MouseDown" />
                <Button Content="Редактировать" 
                        Width="250" 
                        Style="{StaticResource OrangeButtonStyle}"
                        FontSize="20" 
                        Click="Button_Click" />

            </StackPanel>
            <StackPanel>
                <TextBlock Name="errorTextBlock"
                           FontFamily="Arial" 
                           FontSize="14"
                           Foreground="Red"
                           Cursor="Hand"
                           VerticalAlignment="Center" 
                           Margin="0,0,5,0" 
                           HorizontalAlignment="Center"  >
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

