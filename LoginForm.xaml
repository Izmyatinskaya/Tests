<Window x:Class="wpf_тесты_для_обучения.LoginForm"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:wpf_тесты_для_обучения"
        mc:Ignorable="d"
       Title="Вход" Height="450" Width="800"
        Background="White"
        WindowStartupLocation="CenterScreen">
    <Grid Width="800" Height="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Заголовок "Вход" -->
        <TextBlock Text="Вход" 
                   Style="{StaticResource AcentTextStyle}"
                   Grid.Row="0"/>

        <!-- Группа с элементами -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <!-- Группа "Выберите пользователя" -->
            <StackPanel Orientation="Vertical" Margin="0,10,0,10" HorizontalAlignment="Left">
                <TextBlock Text="Выберите пользователя" 
                           FontFamily="Arial" 
                           FontSize="16" 
                           Foreground="Black" 
                           HorizontalAlignment="Left" />
                <ComboBox Name="userComboBox" Width="200" Height="30" 
                          HorizontalAlignment="Left" SelectionChanged="userComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FullNameRole}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Группа "Введите пароль" -->
            <StackPanel Orientation="Vertical" Margin="0,10,0,10" HorizontalAlignment="Left">
                <TextBlock Text="Введите пароль" 
                           FontFamily="Arial" 
                           FontSize="16" 
                           Foreground="Black" 
                           HorizontalAlignment="Left" />
                <Grid>
                    <!-- PasswordBox -->
                    <PasswordBox Name="passwordBox1" 
                                Width="170" Height="30" 
                                VerticalAlignment="Center" 
                                Margin="0,0,30,0"
                                PasswordChanged="PasswordBox_PasswordChanged" />

                    <!-- TextBox для отображения пароля -->
                    <TextBox Name="passwordTextBox1" 
                            Width="170" Height="30" 
                            VerticalAlignment="Center" 
                            Margin="0,0,30,0"
                            Visibility="Collapsed" />

                    <!-- Кнопка "глазик" -->
                    <Button Width="30" Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="ShowPassword_Click" FontFamily="Calibri" >
                        <fa:FontAwesome Icon="Eye" Name="eyeIcon" FontSize="16" />
                    </Button>
                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- Кнопка "Войти" -->
        <Button Content="Войти" 
                Grid.Row="2"
                Width="150"
                Style="{StaticResource OrangeButtonStyle}" 
                FontSize="20" 
                Click="LoginButton_Click" 
                />

        <!-- Надпись "Регистрация" -->
        <TextBlock Text="Регистрация" 
                   Style="{StaticResource LinkTextStyle}"
                   Grid.Row="3"
                   MouseDown="TextBlock_MouseDown" />
    </Grid>
</Window>
