<Window x:Class="wpf_тесты_для_обучения.TestAddForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_тесты_для_обучения"
        mc:Ignorable="d"
        Title="TestAddForm"
        Width="800"
        Height="650"
        Background="White"
        WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <!-- Определяем строки -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Фиксированный блок сверху -->
            <RowDefinition Height="279*"/>
            <RowDefinition Height="302*"/>
            <!-- Прокручиваемая область -->
            <RowDefinition Height="Auto"/>
            <!-- Фиксированная кнопка снизу -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Name="columnGrid2" Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Верхний блок: фиксированный TextBox и TextBlock -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10,10,10,10">
            <TextBox Name="titleTextBox"
                     FontSize="16"
                     Foreground="Gray"
                     Text="Введите название теста ..."
                     Margin="0,0,0,10"
                     SelectionBrush="#FFFFBE5E"
                     PreviewMouseLeftButtonUp="titleTextBox_PreviewMouseLeftButtonUp"
                     TextChanged="titleTextBox_TextChanged" />
            <TextBlock Name="titleTextBlock"
                       FontFamily="Arial Black" 
                       FontSize="24" 
                       Foreground="Black" 
                       Visibility="Collapsed"
                       Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Прокручиваемая область -->
        <ScrollViewer Grid.Column="0" Margin="10,53,10,10" VerticalScrollBarVisibility="Auto" Grid.RowSpan="3">
            <StackPanel x:Name="questionsStackPanel">
                <!-- Здесь будут блоки вопросов -->
            </StackPanel>
        </ScrollViewer>

        <!-- Фиксированная кнопка внизу -->
        <Button Grid.Row="3"
                Content="Закончить тест"
                FontSize="20"
                Name="endTestButton"
                Background="#FB9100"
                Foreground="White"
                FontWeight="Bold"
                Visibility="Collapsed"
                Click="endingTest_Click" HorizontalAlignment="Center" Padding="30,1,30,1" Margin="0,10,0,10" BorderBrush="{x:Null}"/>

        <!-- Правый столбец (без изменений) -->
        <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Margin="10,10,10,10" Visibility="{Binding ViewMode}">
            <TextBlock FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,6">
                Нажмите, чтобы создать новый вопрос
            </TextBlock>
            <Button Content="- 1 вариант ответа" FontFamily="Arial"
                    FontSize="14" BorderThickness="0,0,0,0" Padding="3,4,3,4"
                    Foreground="#FF080808" Background="{x:Null}"
                    HorizontalContentAlignment="Left"
                    Click="Button_Click_1"/>
            <Button Content="- несколько вариантов ответа" FontFamily="Arial"
                    FontSize="14" Background="White" Click="Button_Click"
                    BorderThickness="0,0,0,0" Padding="3,4,3,4"
                    Foreground="#FF080808" HorizontalContentAlignment="Left"/>
            <Button Content="- с картинкой" FontFamily="Arial"
                    FontSize="14" Background="White"
                    BorderThickness="0,0,0,0" Padding="3,4,3,4"
                    Foreground="#FF080808" HorizontalContentAlignment="Left"
                    Click="Button_Click_2"/>
            <Button Content="- картинка и несколько вариантов ответа" FontFamily="Arial"
                    FontSize="14" Background="White"
                    BorderThickness="0,0,0,0" Padding="3,4,3,4"
                    Foreground="#FF080808" HorizontalContentAlignment="Left"
                    Click="Button_Click_3"/>

            <TextBlock FontSize="16" FontWeight="Bold" Margin="0,20,0,5" TextWrapping="Wrap">
               Введите процент верных ответов для прохождения теста
            </TextBlock>
            <TextBox Name="completedPercentTextBox"
            Height="30"
            BorderBrush="#FFABADB3"
            BorderThickness="1" />
            <!-- Раздел выбора должностей -->
            <TextBlock FontSize="16" FontWeight="Bold" Margin="0,20,0,5" TextWrapping="Wrap">
                Выберите должности, которые смогут проходить этот тест
            </TextBlock>
            <ListBox Name="rolesListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsSelected}" Content="{Binding Title}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Готово"
                    Style="{StaticResource OrangeButtonStyle}"
                    FontSize="20"
                    Click="Button_Click_4"
                    Width="150"/>

            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Visibility="Collapsed"/>
        </StackPanel>

    </Grid>
</Window>
