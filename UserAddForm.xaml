<Window x:Class="wpf_тесты_для_обучения.UserAddForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_тесты_для_обучения"
        mc:Ignorable="d"
        Title="Добавление нового пользователя"     Width="800"
    Height="650"
    Background="White"
    WindowStartupLocation="CenterScreen">

    <Grid Width="800" Height="565">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Заголовок "Регистрация" -->
        <TextBlock Text="Новый пользователь" 
                   Style="{StaticResource AcentTextStyle}"/>

        <!-- Основная группа элементов -->
        <StackPanel Grid.Row="1" 
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Width="400">

            <!-- Группа ФИО -->
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <TextBlock Text="Введите фамилию" 
                       FontFamily="Arial" 
                       FontSize="16" 
                       Foreground="Black" />
                <TextBox Name="familiyaTextBox"
                     Height="30"
                     BorderBrush="#FFABADB3"
                     BorderThickness="1" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <TextBlock Text="Введите имя" 
                       FontFamily="Arial" 
                       FontSize="16" 
                       Foreground="Black" />
                <TextBox Name="nameTextBox"
                     Height="30" 
                     BorderBrush="#FFABADB3" 
                     BorderThickness="1" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <TextBlock Text="Введите отчество" 
                       FontFamily="Arial" 
                       FontSize="16" 
                       Foreground="Black" />
                <TextBox Name="patronymicTextBox"
                     Height="30" 
                     BorderBrush="#FFABADB3" 
                     BorderThickness="1" />
            </StackPanel>

            <!-- Группа выбора должности -->
            <StackPanel Orientation="Vertical" Margin="0,15,0,0">
                <TextBlock Text="Выберите должность" 
           FontFamily="Arial" 
           FontSize="16" 
           Foreground="Black" />
                <ComboBox Name="rolesComboBox"
                      Height="30"
                      BorderThickness="1"
                      BorderBrush="Red" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Группа ввода пароля -->
            <StackPanel Orientation="Vertical" Margin="0,15,0,0">
                <TextBlock Text="Введите пароль" 
           FontFamily="Arial" 
           FontSize="16" 
           Foreground="Black" />
                <Grid>
                    <!-- PasswordBox -->
                    <PasswordBox Name="passwordBox1"
                 Height="30"
                 BorderBrush="#FFABADB3"
                 BorderThickness="1"
                 Margin="0,0,0,0"
                 PasswordChanged="PasswordBox1_PasswordChanged" />

                    <!-- TextBox для отображения пароля -->
                    <TextBox Name="passwordTextBox1"
             Height="30"
             BorderBrush="#FFABADB3"
             BorderThickness="1"
             Margin="0,0,0,0"
             Visibility="Collapsed" />
                </Grid>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,10,0,5">
                <TextBlock Text="Повторите пароль" 
           FontFamily="Arial" 
           FontSize="16" 
           Foreground="Black" />
                <Grid>
                    <!-- PasswordBox -->
                    <PasswordBox Name="passwordBox2"
                 Height="30" 
                 BorderBrush="#FFABADB3" 
                 BorderThickness="1"
                 Margin="0,0,0,0"
                 PasswordChanged="PasswordBox2_PasswordChanged" />

                    <!-- TextBox для отображения пароля -->
                    <TextBox Name="passwordTextBox2"
             Height="30"
             BorderBrush="#FFABADB3"
             BorderThickness="1"
             Margin="0,0,0,0"
             Visibility="Collapsed" />
                </Grid>
            </StackPanel>

            <TextBlock Name="errorTextBlock" 
                   Text="" 
                   FontFamily="Arial" 
                   FontSize="14" 
                   Foreground="Red" 
                   Visibility="Collapsed"
                   Margin="0,0,0,0"/>
            <!-- CheckBox для отображения/скрытия пароля -->
            <CheckBox Content="Показать пароль" 
                  FontFamily="Arial" 
                  FontSize="14" 
                  Margin="0,0,0,0"
                  Checked="ShowPassword_Checked" 
                  Unchecked="ShowPassword_Checked" />


        </StackPanel>

        <!-- Группа действий -->
        <StackPanel Grid.Row="2" 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,10">
            <TextBlock Text="Назад" 
                   FontFamily="Arial" 
                   FontSize="14" 
                   Foreground="#FFA25100" 
                   TextDecorations="Underline" 
                   Cursor="Hand"
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0" MouseDown="TextBlock_MouseDown" />
            <Button Content="Добавить" 
                    Style="{StaticResource OrangeButtonStyle}"
                    Width="250" 
                    FontSize="20" 
                    Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
